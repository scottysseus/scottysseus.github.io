---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import Link from "@components/Link.astro";
import { SITE, HOME, SOCIALS } from "@consts";
---

<PageLayout title={"About me"} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">About me</h4>
    <div class="space-y-16">
      <section class="animate space-y-4">
        <article>
          <p>
            Hello! My name is Scott Weidenkopf, and I use this site to share my
            thoughts. I don’t have many of them, so it’s quite empty here.
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {
            SOCIALS.map((SOCIAL) => (
              <li class="flex gap-x-2 text-nowrap">
                <Link
                  href={SOCIAL.HREF}
                  external
                  aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
                >
                  {SOCIAL.NAME}
                </Link>
                {"/"}
              </li>
            ))
          }
          <li class="line-clamp-1">
            <Link
              href={`mailto:${SITE.EMAIL}`}
              aria-label={`Email ${SITE.NAME}`}
            >
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
        <article>
          <p>
            This site uses <Link href="https://astro.build/" external
              >Astro</Link
            > and a modified version of the <Link
              href="https://github.com/markhorn-dev/astro-nano"
              external>Astro Nano theme</Link
            >. <Link
              href="https://github.com/scottysseus/scottysseus.github.io"
              external>View this site’s source on GitHub</Link
            >.
          </p>
        </article>
      </section>
    </div>
  </Container>
</PageLayout>
